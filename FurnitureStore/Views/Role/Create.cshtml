@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<a href="@Url.Action("Logout", "Home")">Logout</a>
<h2>Create role:</h2>
@using (Html.BeginForm("SubmitCreate", "Role", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @model FurnitureStore.Models.Role
    <fieldset>
        <div class="control-group">
            <label class="control-label" for="Name">
                Role name:
            </label>
            <div class="controls">
                @Html.ValidationMessage("Name")
                @Html.TextBox("Name")
            </div>
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                Save
            </button>
            @Html.ActionLink("Cancel", "Index", null, null, new { @class = "btn" })
        </div>
    </fieldset>
}
