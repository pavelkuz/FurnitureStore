@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<a href="@Url.Action("Logout", "Home")">Logout</a>
@using (Html.BeginForm("SubmitEdit", "Role", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @model FurnitureStore.Models.Role
    <fieldset>
        <div class="control-group">
            <label class="control-label" for="Id">
                Id:
            </label>
            <div class="controls">
                @Html.ValidationMessage("Id")
                @Html.TextBox("Id", Model.ID)
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="Name">
                Role name:
            </label>
            <div class="controls">
                @Html.ValidationMessage("Name")
                @Html.TextBox("Name", Model.NAME)
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="AddedDate">
                Added date:
            </label>
            <div class="controls">
                @Html.ValidationMessage("AddedDate")
                @Html.TextBoxFor(x => x.AddedDateSerialized, "{0:dd-MM-yyyy}")
                @*, new {  @placeholder = "введите дату" }*@
            </div>
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                Save
            </button>
            @Html.ActionLink("Cancel", "Index", null, null, new { @class = "btn" })
        </div>
    </fieldset>
}
