<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" namespace="FurnitureStore.Models" assembly="FurnitureStore" default-lazy="false">
  <class name="User" table="Users">
    <id name="Id" column="Id" generator="guid"/>
    <property name="Email" column="Email" />
    <property name="Password" column="Password" />
    <property name="FirstName" column="FirstName" />
    <property name="MiddleName" column="MiddleName" />
    <property name="LastName" column="LastName" />
    <property name="RegistrationDate" column="RegistrationDate" />
    <component name="Role" class="FurnitureStore.Models.Role" >
      <property name="Id" column="RoleId" />
    </component>
  </class>
</hibernate-mapping>
