<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" namespace="FurnitureStore.Models" assembly="FurnitureStore" default-lazy="false">
  <class name="Goods" table="Goods">
    <id name="Id" column="Id" generator="guid"/>
    <property name="Name" column="Name" />
    <property name="Material" column="Material" />
    <property name="Color" column="Color" />
    <property name="Manufacturer" column="Manufacturer" />
    <property name="Length" column="Length" />
    <property name="Width" column="Width" />
    <property name="Height" column="Height" />
    <property name="Price" column="Price" />
    <property name="AdditionalInformation" column="AdditionalInformation" />
    <component name="FurnitureType" class="FurnitureStore.Models.FurnitureType" >
      <property name="Id" column="TypeId" />
    </component>
  </class>
</hibernate-mapping>